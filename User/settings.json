// Place your settings in this file to overwrite the default settings
{
  "breadcrumbs.enabled": false,
  "debug.toolBarLocation": "docked",
  "editor.codeLens": false,
  "editor.fontFamily": "Fira Code Retina, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.tokenColorCustomizations": {
    "comments": { "fontStyle": "" },
    "functions": { "fontStyle": "" },
    "keywords": { "fontStyle": "" },
    "numbers": { "fontStyle": "" },
    "strings": { "fontStyle": "" },
    "textMateRules": [ { "scope": [ ], "settings": { "fontStyle": "" } } ],
    "types": { "fontStyle": "" },
    "variables": { "fontStyle": "" }
  },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "elixirLS.dialyzerEnabled": false,
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": { "*.html.eex": "html" },
  "files.hotExit": "onExitAndWindowClose",
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "gruvboxMaterial.darkContrast": "soft",
  "gruvboxMaterial.darkPalette": "material",
  "gruvboxMaterial.darkWorkbench": "flat",
  "gruvboxMaterial.italicComments": false,
  "gruvboxMaterial.lightContrast": "soft",
  "gruvboxMaterial.lightPalette": "material",
  "gruvboxMaterial.lightWorkbench": "flat",
  "html.format.wrapLineLength": 0,
  "material-icon-theme.activeIconPack": "none",
  "material-icon-theme.folders.color": "#a69883",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.saturation": 0.5,
  "material-icon-theme.showReloadMessage": false,
  "material-icon-theme.showUpdateMessage": false,
  "npm.packageManager": "npm",
  // "powershell.integratedConsole.showOnStartup": false,
  // "powershell.powerShellExePath": "d:\\Apps\\PowerShell\\pwsh.exe",
  // "powershell.sideBar.CommandExplorerVisibility": false,
  "search.smartCase": true,
  "terminal.external.windowsExec": "wt.exe",
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontWeightBold": "normal",
  // "terminal.integrated.rendererType": "experimentalWebgl",
  "terminal.integrated.shell.windows": "pwsh.exe",
  "terminal.integrated.shell.linux": "zsh",
  "terminal.integrated.shellArgs.windows": ["--nologo"],
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.colorCustomizations": {
    "[Gruvbox Material Dark]": {
      "terminal.ansiBlack": "#32302f",
    },
    "[Gruvbox Material Light]": {
      "terminal.ansiBlack": "#f2e5bc",
    }
  },
  "workbench.colorTheme": "Gruvbox Material Light",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
